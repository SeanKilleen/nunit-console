# EditorConfig helps developers define and 
# maintain consistent coding styles between 
# different editors and IDEs

# http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4

# Default severity for analyzer diagnostics with category 'DocumentationAnalyzers.Refactorings'
dotnet_analyzer_diagnostic.category-DocumentationAnalyzers.Refactorings.severity = suggestion
dotnet_diagnostic.DOC100.severity = none # DOC100: Place text in paragraphs
dotnet_diagnostic.DOC900.severity = none # DOC900: Render as Markdown (not working correctly at time of initial use)

[*.{proj,csproj,vcxproj,xproj,json,config,nuspec,xml,yml}]
indent_style = space
indent_size = 2

